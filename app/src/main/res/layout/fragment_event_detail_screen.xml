<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/event_detail_image_SIV"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_logo_boosthub"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.ImageView.Cut" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/event_detail_whats_up_MTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/whats_s_up"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_detail_image_SIV" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/event_detail_whats_up_input_MTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_detail_whats_up_MTV" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/event_detail_location_MTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/location"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_detail_whats_up_input_MTV" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/watch_on_map_n"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@+id/event_detail_location_MTV"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/event_detail_location_MTV"
                    app:layout_constraintTop_toTopOf="@+id/event_detail_location_MTV" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/event_detail_location_input_MTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_detail_location_MTV" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/event_detail_date_MTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/date"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_detail_location_input_MTV" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/event_detail_date_input_MTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_detail_date_MTV" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/event_detail_whos_there_MTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/who_s_there"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_detail_date_input_MTV" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/event_detail_whos_there_input_MTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_detail_whos_there_MTV" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/event_detail_what_else_MTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/what_else"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_detail_whos_there_input_MTV" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/event_detail_what_else_input_MTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_detail_what_else_MTV" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/event_detail_restrictions_MTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/restrictions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_detail_what_else_input_MTV" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/event_detail_restrictions_input_MTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/event_detail_restrictions_MTV" />

                <ImageButton
                    android:id="@+id/event_detail_thumb_down_IBTN"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="@string/for_an_event_you_don_t_like"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_detail_restrictions_input_MTV"
                    app:srcCompat="@drawable/icon_thumb_down"
                    app:tint="@color/grey" />


                <ImageButton
                    android:id="@+id/event_detail_thumb_up_IBTN"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="64dp"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="@string/for_an_event_you_want_to_take_part_in"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_detail_restrictions_input_MTV"
                    app:srcCompat="@drawable/icon_thumb_up"
                    app:tint="@color/grey" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>